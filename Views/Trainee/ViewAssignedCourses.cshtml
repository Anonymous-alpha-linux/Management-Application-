@model IEnumerable<WebApplication1.Models.Course>
@{
    ViewBag.Title = "ViewAssignedCourses";
}

<br />
<div class="blog">
    <div class="container">
        @Html.ActionLink("Back to Index", "Index", "Trainer", null, new { @class = "btn btn-default" })
        @{int i = 0;
                <div class="row">
                    @foreach (var item in Model)
                    {
                    i++;
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <div class="img-responsive">
                                <img src="~/imgs/download.jpg" class="img-fluid" style="width:100%;height:400px">
                            </div>

                            <div class="caption">
                                <h3 style="font-weight: bold">@item.CourseName</h3>
                                <h5><strong>Description:</strong></h5>
                                <p>@item.CourseDetail</p>
                                <h5><strong>Category:</strong></h5>
                                <p><button href="#" class="btn btn-primary" disabled role="button">@item.Category.CategoryName</button></p>
                            </div>
                        </div>
                    </div>

                    }
                </div>       
            }

    </div>
</div>

