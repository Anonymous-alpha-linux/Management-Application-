@model WebApplication1.Models.RegisterViewModel

@{
    ViewBag.Title = "Create new account";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "tẽ" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>
    </div>
    if (User.IsInRole("Staff"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Trainee.UserName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Trainee.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Trainee.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Trainee.Age, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m=>m.Trainee.Age, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Trainee.Age)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Trainee.Location, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Trainee.Location, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Trainee.Location)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Trainee.Date_of_birth, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Trainee.Date_of_birth, new { @class = "form-control", @type = "date" ,})
                @Html.ValidationMessageFor(model => model.Trainee.Date_of_birth, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Trainee.Education, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Trainee.Education, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Trainee.Education)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Trainee.Main_programming_lang, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Trainee.Main_programming_lang, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Trainee.Main_programming_lang)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Trainee.TOEIC_score, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Trainee.TOEIC_score, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Trainee.TOEIC_score, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Trainee.Exp_details, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Trainee.Exp_details, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Trainee.Exp_details)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Trainee.Department, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Trainee.Department, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Trainee.Department)
            </div>
        </div>
    }
    if (User.IsInRole("Admin"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.RoleName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.RoleName, new SelectList(Model.Roles), new { @class = "dropdown" })
            </div>
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}