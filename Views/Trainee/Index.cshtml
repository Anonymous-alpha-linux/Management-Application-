@model List<WebApplication1.Models.Course>
@{
    ViewBag.Title = "Index";
}

<h2>Welcome @User.Identity.Name</h2>
<div class="blog">
    <div class="container">
        <h3 class="text-info">Recommended Courses</h3>
        <hr />
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <div class="img-responsive">
                            <img src="~/imgs/download.jpg" class="img-fluid" style="width:100%;height:400px;">
                        </div>

                        <div class="caption">
                            <h3 style="font-weight: bold"></h3>
                            <h5><strong>Description:</strong></h5>
                            <p>@item.CourseDetail</p>
                            <h5><strong>Category:</strong></h5>
                            <p><button href="#" class="btn btn-primary" disabled role="button">@item.Category.CategoryName</button></p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <h3 class="text-info" id="viewAssignedCourses">Assigned Courses</h3>
        <hr />
        @{ Html.RenderPartial("ViewAssignedCourses");}
    </div>
</div>